<h1>Listing awards</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Award type</th>
      <th>Total requested</th>
      <th>Total granted</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.patient_id %></td>
        <td><%= award.award_type %></td>
        <td><%= award.total_requested %></td>
        <td><%= award.total_granted %></td>
        <td><%= award.description %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Award', new_award_path %>
