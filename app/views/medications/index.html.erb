<h1>Listing medications</h1>

<table>
  <thead>
    <tr>
      <th>Award</th>
      <th>Id number</th>
      <th>Name</th>
      <th>Unit cost</th>
      <th>Quantity</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.award_id %></td>
        <td><%= medication.id_number %></td>
        <td><%= medication.name %></td>
        <td><%= medication.unit_cost %></td>
        <td><%= medication.quantity %></td>
        <td><%= medication.total_cost %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

